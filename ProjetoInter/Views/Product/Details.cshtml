@model ProductModel

<div class="container my-5">
    <div class="p-5 text-center bg-body-tertiary rounded-3">
        @if (Model.ImageUrl != null)
        {
            <img src="/imagem/@Model.ImageUrl" class="card-img-top" style="width:350px; height:350px">
        }
        else
        {
            <img src="/imagem/emptyImage.png" class="card-img-top" style="width:350px; height:350px">
        }
        <h1 class="text-body-emphasis">@Model.Title</h1>
        <p class="col-lg-8 mx-auto fs-5 text-muted">
            @Model.Description
        </p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Preço: R$ @Model.Value</li>
        </ul>
        <a type="submit" class="btn btn-info w-50 mt-3" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
    </div>
</div>